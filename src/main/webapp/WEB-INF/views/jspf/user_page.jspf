<p class = allOffers> Offers by user: ${user.userName}</p>


<c:choose>
<c:when test="${empty userFlats}">
	Nie znaleziono zadnych ofert
</c:when>
<c:otherwise>

<c:forEach items="${userFlats}" var="flat">
<div>
<div class = "div1">
	<p class ="flatName"><a href="flat/${flat.id}"><b>${flat.name}</b></a></p>
	<p>City: ${flat.city}</p>
